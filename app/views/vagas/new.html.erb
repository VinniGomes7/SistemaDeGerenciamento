<h1>Criar Nova Vaga</h1>

<%= form_with(model: @vaga, local: true) do |form| %>
  <% if @vaga.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vaga.errors.count, "erro") %> proibiu esta vaga de ser salva:</h2>
      <ul>
        <% @vaga.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "Título da Vaga" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, "Descrição da Vaga" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :empregador_id, "Empregador" %>
    <%= form.number_field :empregador_id %>
  </div>

  <div>
    <%= form.submit "Criar Vaga" %>
  </div>
<% end %>

<%= link_to 'Voltar', vagas_path %>